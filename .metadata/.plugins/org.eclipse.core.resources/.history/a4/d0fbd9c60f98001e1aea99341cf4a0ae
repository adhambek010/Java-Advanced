package com.java.advanced.io;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

public class ByteStreamDemo {
	
	public static final String fileLocation = "C:\\JavaLearning\\JavaAdvanced\\JavaAdvancedPart 1\\src\\com\\java\\advanced\\io\\FileReader.txt";
	public static final String newFile = fileLocation + "new.txt"; 

	public static void main(String[] args) {
		
		FileInputStream inputStream = null;
		FileOutputStream outputStream = null;

		String data = "Author Adkham Salaydinov";
		try {
			inputStream = new FileInputStream(fileLocation);
			outputStream = new FileOutputStream(newFile);
			
			int content = inputStream.read();
			while(content != -1) {
				outputStream.write((byte)content);
				content = inputStream.read(); 
			}
			outputStream.write(data.getBytes());
			
			FileInputStream fis = new FileInputStream(newFile);
			 int val = fis.read();
			 
			 String newdata = "";
			 while(val != -1) {
				 newdata += (char)val;
				 val = fis.read();
			 }
			 System.out.println(newdata);
			
			inputStream.close();
			outputStream.close();
			fis.close();
		} catch (IOException e) {
			System.err.println(e.toString());
			e.printStackTrace();
		}
	}

}
