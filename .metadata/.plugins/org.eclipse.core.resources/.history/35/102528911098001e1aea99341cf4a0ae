package com.java.advanced.io;

import java.io.FileReader;
import java.io.FileWriter;

public class CharacterStreamDemo {
	
	public static void main(String[] args) {
		
		FileWriter writer = null;
		FileReader reader = null;
		String data = "";
		
		try {
			reader = new FileReader(ByteStreamDemo.fileLocation);
			writer = new FileWriter(ByteStreamDemo.fileLocation,true);
			
			int val = reader.read();
			while(val != -1) {
				data += (char)val;
				val = reader.read();
			}
			System.out.println(data);
//			Thread.sleep(5000);
//			char[] ch = data.toCharArray();
//			writer.write(ch);
//			
			reader.close();
			writer.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
