package com.java.advanced.io;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class CharacterStreamDemo {
	
	public static void main(String[] args) {
		String text = "public class FileReader\r\n"
				+ "extends InputStreamReader\r\n"
				+ "Convenience class for reading character files. "
				+ "The constructors of this class assume that the default "
				+ "character encoding and the default byte-buffer size are appropriate. "
				+ "To specify these values yourself, construct an InputStreamReader on a "
				+ "FileInputStream.\r\n"
				+ "FileReader is meant for reading streams of characters. "
				+ "For reading streams of raw bytes, consider using a FileInputStream.\r\n"
				+ "\r\n"
				+ "Since:\r\n"
				+ "JDK1.1\r\n"
				+ "See Also:\r\n"
				+ "InputStreamReader, FileInputStream";
		
		String newText = "";
		String fileLocation = "C:\\JavaLearning\\JavaAdvanced\\JavaAdvancedPart 1\\src\\com\\java\\advanced\\io\\FileReader.txt";
		FileReader reader = null;
		FileWriter writer = null;
		try {
			writer = new FileWriter(fileLocation);
			char[] c = "Adham".toCharArray();
			writer.write(c);
			
			reader = new FileReader(fileLocation);
			
			int val = reader.read();
			while(val != -1) {
				newText += (char)val;
				val = reader.read();
			}
			System.out.println(newText);
		}catch (IOException e) {
			System.err.println(e.toString());
			e.printStackTrace();
		}
	}
}
